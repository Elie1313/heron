heron <- function(a, b, c) {
# Calculer le demi-périmètre
p <- (a + b + c) / 2
# Calculer l'aire à l'aide de la formule d'Héron
area <- sqrt(p * (p - a) * (p - b) * (p - c))
return(area)
}
